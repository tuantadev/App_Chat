<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/back"
                android:id="@+id/back"
                android:layout_height="wrap_content"/>
<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_gravity="center"-->
<!--                android:text="Switch Account"-->
<!--                android:textColor="@color/white"-->
<!--                android:textSize="20sp"-->
<!--                android:layout_height="wrap_content"/>-->
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="36dp"
                android:id="@+id/ava_in_switch"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center"
                android:src="@drawable/default_ava"
                android:layout_height="36dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="8dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Name Of User"
                    android:id="@+id/name_in_switch"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Sign in"
                    android:textSize="12sp"
                    android:id="@+id/status_sign"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/logout_login"
        android:layout_width="320dp"
        android:background="@drawable/box_chat"
        android:text="Log Out"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:layout_height="wrap_content"/>
</RelativeLayout>
